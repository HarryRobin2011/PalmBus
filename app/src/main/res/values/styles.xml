<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="My_Theme_light"/>

    <style name="My_Theme_light" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:colorForeground">@color/line_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>
    <style name="text_tag_style">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/line_height_10</item>
    </style>

    <style name="text_style_1">
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name="android:textColor">@color/text_black_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10.0dp</item>
    </style>

    <style name="text_style_2">
        <item name="android:textSize">@dimen/text_size_2</item>
        <item name="android:textColor">@color/text_black_light</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_style_3_title">
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:textColor">@color/text_black_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_style_3">
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name="android:textColor">@color/text_black_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="text_style_4">
        <item name="android:textSize">@dimen/text_size_5</item>
        <item name="android:textColor">@color/text_gray_dark</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="line_style_col_dark">
    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/line_dark</item>
    </style>

    <style name="line_style_row_dark">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_dark</item>
    </style>

    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--白天主题，此处直接和AppTheme一样-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/night_one_text_color</item>

        <item name="dayNightBackground">@color/day_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/day_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/day_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/day_three_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/day_backgroup_color</item>
    </style>
    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/night_backgroup_color</item>
        <item name="colorPrimaryDark">@color/night_backgroup_color</item>
        <item name="colorAccent">@color/night_backgroup_color</item>

        <item name="dayNightBackground">@color/night_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/night_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/night_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/night_there_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/night_there_text_color</item>

    </style>


</resources>
