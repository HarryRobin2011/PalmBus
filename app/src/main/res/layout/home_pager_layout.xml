<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/city_name"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="@dimen/height_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10.0dp"
            android:text="滨州" />

        <EditText
            android:id="@id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10.0dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_radius_bg" />
        <ImageView android:id="@id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s_5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dp"
            android:orientation="vertical">
        <TextView android:id="@id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云"
            style="@style/Base.TextAppearance.AppCompat.Body1"/>
            <TextView android:id="@id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="8 ℃"
                style="@style/Base.TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/white"
        android:divider="@android:color/darker_gray" />
</LinearLayout>